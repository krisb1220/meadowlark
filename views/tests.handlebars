<ul>
  {{#each tours}}
    <li>
      {{name}} - {{price}}
      {{#if ../currencies }}
        {{../currency.abbrev}}
      {{/if}}
    </li>
  {{/each}}
</ul>

{{#unless currencies}}
  <p>All prices in: <strong>{{currency.name}}</strong></p>
{{/unless}}

{{#if specialsUrl}}
  <p>Check out our <a href="{{specialsUrl}}">specials!</a></p>
{{else}}
  <p>Please check back often for specials</p>
{{/if}}

<p>

  {{#each currencies}}
    <a href="#" class="currency">{{.}}</a>
  {{else}}
    Unfortunately we only accept <strong>{{currency.name}}</strong>
  {{/each}}
</p>